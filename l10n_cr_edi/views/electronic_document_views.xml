<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fe_cr_document_tree" model="ir.ui.view">
        <field name="name">fe.cr.document.tree</field>
        <field name="model">fe.cr.document</field>
        <field name="arch" type="xml">
            <list string="Documentos electrónicos">
                <field name="name"/>
                <field name="move_id"/>
                <field name="state"/>
                <field name="sent_date"/>
                <field name="response_date"/>
            </list>
        </field>
    </record>

    <record id="view_fe_cr_document_form" model="ir.ui.view">
        <field name="name">fe.cr.document.form</field>
        <field name="model">fe.cr.document</field>
        <field name="arch" type="xml">
            <form string="Documento electrónico">
                <header>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,generated,sent,accepted,rejected,error"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="move_id"/>
                    </group>
                    <group>
                        <field name="xml_filename" readonly="1"/>
                        <field name="sent_date" readonly="1"/>
                        <field name="response_date" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Comprobante XML">
                            <field name="xml_comprobante" filename="xml_filename"/>
                        </page>
                        <page string="Respuesta">
                            <field name="xml_respuesta" filename="xml_filename"/>
                            <field name="message" widget="text" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fe_cr_documents" model="ir.actions.act_window">
        <field name="name">Documentos electrónicos</field>
        <field name="res_model">fe.cr.document</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
